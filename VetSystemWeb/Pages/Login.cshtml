@page
@model LoginModel
@{
    ViewData["Title"] = "Sign In";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>

    <style>
        body {
            margin: 0;
            font-family: "Segoe UI", sans-serif;
            background-color: #b7cdfb;
            background-image: radial-gradient(#9fb9f5 20%, transparent 20%);
            background-size: 120px 120px;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        header {
            background-color: #eef3fb;
            padding: 16px 32px;
            font-size: 22px;
            font-weight: 600;
            color: #0b4f85;
            display: flex;
            align-items: center;
            gap: 10px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        }

        .container {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-card {
            background-color: #f2f6fd;
            padding: 40px;
            width: 380px;
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
            text-align: center;
        }

            .login-card h1 {
                margin-bottom: 24px;
                color: #0b4f85;
            }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        label {
            font-weight: 600;
            color: #0b4f85;
            display: block;
            margin-bottom: 6px;
        }

        input {
            width: 100%;
            padding: 12px 16px;
            border-radius: 25px;
            border: 2px solid #0b4f85;
            outline: none;
            font-size: 14px;
        }

            input:focus {
                border-color: #06355a;
            }

        button {
            width: 100%;
            padding: 12px;
            margin-top: 10px;
            border: none;
            border-radius: 25px;
            background-color: #0b4f85;
            color: #fff;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
        }

            button:hover {
                background-color: #06355a;
            }
    </style>
</head>
<body>

    <header>
        🐾 Veterinarian System
    </header>

    <div class="container">
        <form method="post" class="login-card">
            <h1>Sign In</h1>

            <div class="form-group">
                <label asp-for="Input.Email">Email</label>
                <input asp-for="Input.Email" type="email" />
            </div>

            <div class="form-group">
                <label asp-for="Input.Password">Password</label>
                <input asp-for="Input.Password" type="password" />
            </div>

            <button type="submit">Sign In</button>
        </form>
    </div>

</body>
</html>